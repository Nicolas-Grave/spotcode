.column.is-full.has-text-left.song-item
  .columns.is-mobile
    .column.is-2-mobile.is-1-desktop.play-button
      = link_to "javascript:void(0);", class: "has-text-white", data: { song: url_for(song.file), url: album_recently_heards_path(song.album) } do
        %i.fas.fa-play-circle.fa-2x

    .column
      %h2.is-size-5= song.title
      %p= song.album.artist.name

    .column.is-2-mobile.is-1-desktop.is-pulled-right.favorite
      = favorite_button song
